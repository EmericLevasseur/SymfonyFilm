{# src\IIM\CinemaBundle\Resources\views\Personne\list.html.twig #}
{% extends 'IIMCinemaBundle::layout.html.twig' %}

{% block title %}Liste des réalisateurs{% endblock %}

{% block body %}

<div class="container">

    <div class="row">

        <div class="col-md-3">
            <p class="lead">Cinéma</p>
            <div class="list-group">
                <a href="{{ path('page_films') }}" class="list-group-item">Films</a>
                <a href="{{ path('page_realisateurs') }}" class="list-group-item active">Réalisateurs</a>
            </div>
        </div>

        <div class="col-md-9">

    <h2>Liste des Réalisateurs</h2>

    <br />

    {% for realisateur in realisateurs %}
    <div class="well">
          <div class="row">
                <div class="col-md-12">
        <strong>{{ realisateur.prenom}} {{ realisateur.nom }}</strong> ({{"now"|date('Y') - realisateur.dateNaissance|date('Y')}} ans)<br />
        </br>
        <hr />
<div class="text-right">
  <a href="{{ path('page_realisateurs_films') }}" class="btn btn-success">Voir ses films</a>
</div>
</div>
      </div>
</div>

    {% endfor %}

    </div>

</div>

</div>

{% endblock %}
